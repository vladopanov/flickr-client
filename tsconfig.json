{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": false,
    "alwaysStrict": true,
    "baseUrl": ".",
    "charset": "utf8",
    "diagnostics": true,
    "emitBOM": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": [
      "es6",
      "dom",
      "scripthost"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "paths": {
      "@models/*": [ "src/models/*" ],
      "@services/*": [ "src/services/*" ],
      "@src/*": [ "src/*" ],
    },
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "types": [
      "mobx",
      "mobx-react",
      "react",
      "react-dom"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}
